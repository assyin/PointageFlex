                    <button className="px-4 py-2.5 bg-white border border-gray-300 text-[#212529] rounded-lg hover:bg-gray-50 transition-colors text-[14px] font-medium">
                      Voir les logs webhook
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>

          {/* Right Panel - Terminal Form */}
          {showTerminalForm && (
            <div className="col-span-5">
              <div className="bg-white rounded-lg border border-gray-200 sticky top-6">
                <div className="p-6 border-b border-gray-200">
                  <div className="flex items-start justify-between mb-2">
                    <div className="flex-1">
                      <h3 className="text-[18px] font-semibold text-[#212529]">
                        Formulaire terminal
                      </h3>
                      <p className="text-[13px] text-[#6C757D] mt-1">
                        Créer ou modifier un terminal de pointage
                      </p>
                    </div>
                    <button
                      onClick={() => setShowTerminalForm(false)}
                      className="text-[#6C757D] hover:text-[#212529]"
                    >
                      <X className="w-5 h-5" />
                    </button>
                  </div>
                  <button className="text-[13px] text-[#0052CC] hover:underline font-medium">
                    Détails
                  </button>
                </div>

                <div className="p-6 space-y-4 max-h-[calc(100vh-200px)] overflow-y-auto">
                  {/* Terminal Name */}
                  <div>
                    <label className="block text-[14px] font-medium text-[#212529] mb-1.5">
                      Nom du terminal
                    </label>
                    <input
                      type="text"
                      value={formData.name}
                      onChange={(e) => setFormData({ ...formData, name: e.target.value })}
                      placeholder="Ex : Terminal Entrée Principale"
                      className="w-full px-3 py-2.5 bg-white border border-gray-300 rounded-lg text-[14px] placeholder:text-[#6C757D] focus:outline-none focus:ring-2 focus:ring-[#0052CC] focus:border-transparent"
                    />
                  </div>

                  {/* Type & Site */}
                  <div className="grid grid-cols-2 gap-4">
                    <div>
                      <label className="block text-[14px] font-medium text-[#212529] mb-1.5">
                        Type
                      </label>
                      <div className="relative">
                        <select
                          value={formData.type}
                          onChange={(e) => setFormData({ ...formData, type: e.target.value })}
                          className="w-full px-3 py-2.5 bg-white border border-gray-300 rounded-lg text-[14px] text-[#212529] focus:outline-none focus:ring-2 focus:ring-[#0052CC] focus:border-transparent appearance-none"
                        >
                          <option value="">Sélectionner</option>
                          <option value="fingerprint">Empreinte digitale</option>
                          <option value="facial">Reconnaissance faciale</option>
                          <option value="rfid">Badge RFID</option>
                          <option value="qr">QR Code</option>
                        </select>
                        <ChevronDown className="absolute right-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-[#6C757D] pointer-events-none" />
                      </div>
                    </div>

                    <div>
                      <label className="block text-[14px] font-medium text-[#212529] mb-1.5">
                        Site affecté
                      </label>
                      <div className="relative">
                        <select
                          value={formData.site}
                          onChange={(e) => setFormData({ ...formData, site: e.target.value })}
                          className="w-full px-3 py-2.5 bg-white border border-gray-300 rounded-lg text-[14px] text-[#212529] focus:outline-none focus:ring-2 focus:ring-[#0052CC] focus:border-transparent appearance-none"
                        >
                          <option value="">Sélectionner un site</option>
                          <option value="casablanca">Casablanca</option>
                          <option value="tanger">Tanger</option>
                          <option value="rabat">Rabat</option>
                        </select>
                        <ChevronDown className="absolute right-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-[#6C757D] pointer-events-none" />
                      </div>
                    </div>
                  </div>

                  {/* Device ID */}
                  <div>
                    <label className="block text-[14px] font-medium text-[#212529] mb-1.5">
                      Device ID unique
                    </label>
                    <div className="flex gap-2">
                      <input
                        type="text"
                        value={formData.deviceId}
                        onChange={(e) => setFormData({ ...formData, deviceId: e.target.value })}
                        placeholder="Ex : CAS-ENTREE-001"
                        disabled={formData.autoDeviceId}
                        className="flex-1 px-3 py-2.5 bg-white border border-gray-300 rounded-lg text-[14px] placeholder:text-[#6C757D] focus:outline-none focus:ring-2 focus:ring-[#0052CC] focus:border-transparent disabled:bg-gray-50"
                      />
                      <button
                        onClick={() => setFormData({ ...formData, autoDeviceId: !formData.autoDeviceId })}
                        className={`px-4 py-2.5 rounded-lg text-[14px] font-medium transition-colors ${
                          formData.autoDeviceId
                            ? 'bg-[#0052CC] text-white'
                            : 'bg-white border border-gray-300 text-[#212529] hover:bg-gray-50'
                        }`}
                      >
                        Auto
                      </button>
                    </div>
                    <p className="text-[12px] text-[#6C757D] mt-1.5">
                      Peut être généré automatiquement ou saisi manuellement.
                    </p>
                  </div>

                  {/* IP Address */}
                  <div>
                    <label className="block text-[14px] font-medium text-[#212529] mb-1.5">
                      Adresse IP
                    </label>
                    <div className="flex gap-2">
                      <input
                        type="text"
                        value={formData.ipAddress}
                        onChange={(e) => setFormData({ ...formData, ipAddress: e.target.value })}
                        placeholder="Ex : 192.168.0.12"
                        disabled={formData.autoIpAddress}
                        className="flex-1 px-3 py-2.5 bg-white border border-gray-300 rounded-lg text-[14px] font-mono placeholder:text-[#6C757D] focus:outline-none focus:ring-2 focus:ring-[#0052CC] focus:border-transparent disabled:bg-gray-50"
                      />
                      <button
                        onClick={() => setFormData({ ...formData, autoIpAddress: !formData.autoIpAddress })}
                        className={`px-4 py-2.5 rounded-lg text-[14px] font-medium transition-colors ${
                          formData.autoIpAddress
                            ? 'bg-[#0052CC] text-white'
                            : 'bg-white border border-gray-300 text-[#212529] hover:bg-gray-50'
                        }`}
                      >
                        Auto
                      </button>
                    </div>
                  </div>

                  {/* API Key */}
                  <div>
                    <label className="block text-[14px] font-medium text-[#212529] mb-1.5">
                      API Key
                    </label>
                    <input
                      type="text"
                      value={formData.apiKey}
                      onChange={(e) => setFormData({ ...formData, apiKey: e.target.value })}
                      placeholder="Générer automatiquement"
                      className="w-full px-3 py-2.5 bg-white border border-gray-300 rounded-lg text-[14px] font-mono placeholder:text-[#6C757D] focus:outline-none focus:ring-2 focus:ring-[#0052CC] focus:border-transparent"
                    />
                    <p className="text-[12px] text-[#6C757D] mt-1.5">
                      Utilisée pour sécuriser les webhooks et appels du terminal.
                    </p>
                  </div>

                  {/* Status Toggle */}
                  <div>
                    <label className="block text-[14px] font-medium text-[#212529] mb-3">
                      Statut
                    </label>
                    <div className="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                      <div>
                        <div className="text-[14px] font-semibold text-[#212529]">Actif</div>
                        <div className="text-[12px] text-[#6C757D] mt-0.5">
                          Le terminal accepte les pointages et remonte les données.
                        </div>
                      </div>
                      <label className="relative inline-flex items-center cursor-pointer">
                        <input
                          type="checkbox"
                          checked={formData.isActive}
                          onChange={(e) => setFormData({ ...formData, isActive: e.target.checked })}
                          className="sr-only peer"
                        />
                        <div className="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-[#0052CC]"></div>
                      </label>
                    </div>
                  </div>

                  {/* Action Buttons */}
                  <div className="pt-4 space-y-3">
                    <button className="w-full px-4 py-2.5 bg-white border border-gray-300 text-[#212529] rounded-lg hover:bg-gray-50 transition-colors text-[14px] font-medium">
                      <RefreshCw className="w-4 h-4 inline mr-2" />
                      Réinitialiser l'API Key
                    </button>

                    <div className="flex gap-3">
                      <button
                        onClick={() => setShowTerminalForm(false)}
                        className="flex-1 px-4 py-2.5 bg-white border border-gray-300 text-[#212529] rounded-lg hover:bg-gray-50 transition-colors text-[14px] font-medium"
                      >
                        Annuler
                      </button>
                      <button className="flex-1 px-4 py-2.5 bg-[#0052CC] text-white rounded-lg hover:bg-[#0041A8] transition-colors text-[14px] font-semibold">
                        Enregistrer le terminal
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  );
}
